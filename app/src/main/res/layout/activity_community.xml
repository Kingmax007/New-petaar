<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ActivityCommunity" android:background="@color/white"
    android:padding="20dp"
    >

    <RelativeLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivBackArrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_arrow"/>

        <TextView
            style="@style/tvHeading"
            android:text="Pet Community" />

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/girl"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/parent2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/parent">
        <EditText
            android:id="@+id/search"
            style="@style/search"
            android:hint="Search here...."
            android:drawableStart="@drawable/search"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parent2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivProfile1"
                    android:layout_margin="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/girl"/>

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_toEndOf="@id/ivProfile1"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Marry Kavin"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv1"
                    android:layout_below="@id/ivProfile1"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:src="@drawable/iv_row_6"/>
                <ImageView
                    android:id="@+id/iv2"
                    android:layout_marginStart="10dp"
                    android:layout_below="@id/ivProfile1"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_toEndOf="@id/iv1"
                    android:src="@drawable/iv_row_4"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivProfile2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/ic_boy" />

                <TextView
                    android:id="@+id/tvName2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_toEndOf="@id/ivProfile2"
                    android:fontFamily="@font/poppins_medium"
                    android:text="David Malin"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv8"
                    android:layout_below="@id/ivProfile2"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:src="@drawable/iv_row_6"/>
                <ImageView
                    android:id="@+id/iv3"
                    android:layout_marginStart="10dp"
                    android:layout_below="@id/ivProfile2"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_toEndOf="@id/iv8"
                    android:src="@drawable/iv_row_4"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivProfile3"
                    android:layout_margin="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/girl"/>

                <TextView
                    android:id="@+id/tvNam3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_toEndOf="@id/ivProfile3"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Marry Kavin"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv4"
                    android:layout_below="@id/ivProfile3"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:src="@drawable/iv_row_6"/>
                <ImageView
                    android:id="@+id/iv5"
                    android:layout_marginStart="10dp"
                    android:layout_below="@id/ivProfile3"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_toEndOf="@id/iv4"
                    android:src="@drawable/iv_row_4"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivProfile4"
                    android:layout_margin="10dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_boy"/>

                <TextView
                    android:id="@+id/tvNam4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_toEndOf="@id/ivProfile4"
                    android:fontFamily="@font/poppins_medium"
                    android:text="David Malin"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv6"
                    android:layout_below="@id/ivProfile4"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:src="@drawable/iv_row_6"/>
                <ImageView
                    android:id="@+id/iv7"
                    android:layout_marginStart="10dp"
                    android:layout_below="@id/ivProfile4"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_toEndOf="@id/iv6"
                    android:src="@drawable/iv_row_4"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>