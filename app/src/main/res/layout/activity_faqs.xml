<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ActivityFAQs"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/parent"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivBackArrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_arrow"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/girl"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/parent2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/parent">
        <TextView
            android:id="@+id/tvfaqs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/blue"
            android:text="@string/faq_s"/>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/parent2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light">

            <TextView
                android:id="@+id/question"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toLeftOf="@id/dropDown"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/what_is_the_purpose_of_the_pet_app"
                android:textColor="@color/blue"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/dropDown"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/arrow_drop_down" />

            <TextView
                android:id="@+id/answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:visibility="gone"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/the_pet_app_serves_as_a_comprehensive_platform_designed_to_assist_pet_owners_in_various_aspects_of_pet_care_including_finding_pet_friendly_places_accessing_expert_advice_connecting_with_the_pet_community_and_organizing_pet_related_events"
                android:textColor="@color/black"
                android:textSize="13sp" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:id="@+id/view2"
            android:layout_below="@id/question3"
            android:layout_marginTop="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light">
            <TextView
                android:id="@+id/question2"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toLeftOf="@id/dropDown2"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/how_do_i_create_a_profile_on_the_pet_app"
                android:textColor="@color/blue"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/dropDown2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_drop_down"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/answer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question2"
                android:layout_marginStart="10dp"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/you_can_create_profile_by_joining_at_the_start_by_pressing_do_you_have_account_or_by_joining_community"
                android:textColor="@color/black"
                android:textSize="13sp" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:id="@+id/view3"
            android:layout_below="@id/question4"
            android:layout_marginTop="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light">
            <TextView
                android:id="@+id/question3"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toLeftOf="@id/dropDown3"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/can_i_add_multiple_pets_to_my_profile"
                android:textColor="@color/blue"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/dropDown3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_drop_down"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/answer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question3"
                android:layout_marginStart="10dp"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/yes_you_can_add_multiple_pets_to_your_profile"
                android:textColor="@color/black"
                android:textSize="13sp" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:id="@+id/view6"
            android:layout_marginTop="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light">
            <TextView
                android:id="@+id/question4"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toLeftOf="@id/dropDown4"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/how_do_i_find_pet_friendly_places_using_the_app"
                android:textColor="@color/blue"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/dropDown4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_drop_down"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/answer4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question4"
                android:layout_marginStart="10dp"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/you_can_find_it_by_opening_side_menu_bar_and_select_pet_freindly_plces_option"
                android:textColor="@color/black"
                android:textSize="13sp" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:id="@+id/view7"
            android:layout_below="@id/question5"
            android:layout_marginTop="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light">
            <TextView
                android:id="@+id/question5"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toLeftOf="@id/dropDown5"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/is_there_a_community_feature_on_the_app"
                android:textColor="@color/blue"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/dropDown5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_drop_down"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/answer5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question5"
                android:layout_marginStart="10dp"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Yes there is also community feature in the app."
                android:textColor="@color/black"
                android:textSize="13sp" />

        </RelativeLayout>


    </LinearLayout>
    </ScrollView>
</RelativeLayout>